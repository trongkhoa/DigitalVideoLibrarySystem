<% include bootstrap.ejs %>
<html>
<head>
<title>Login</title>
<style>
container1{
margin:auto;
width:70%;
}

</style>

</head>
<body>
	<div class="jumbotron">
		<div class="container">
			<h1 class="text-center">Welcome to Video Digital Library System
			</h1>
			<br>
			<p class="text-left">Please log in</p>
		</div>

	</div>

	<div class="container">
		<form role="form" action="/validate" method="post">
			<div class="form-group">
				<label for="exampleInputEmail1">User Name</label> <input type="text"
					class="form-control" name="userName" id="uname"
					placeholder="Enter username">
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Password</label> <input
					type="password" class="form-control" name="Password" id="password"
					placeholder="Password">
			</div>


			<button type="submit" class="btn btn-primary">Sign In</button>
		</form>


	</div>
	
	<div class="col-md-4 col-md-offset-2">
		<form role="form" action="/register" method="post">
			<div class="form-group">
			<p>Haven't used the system yet? Please register!!! </p>
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
	</div>
</body>
</html>