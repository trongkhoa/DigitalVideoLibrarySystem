<% include bootstrap.ejs %>
<html>
<head>
<title>Edit Customer</title>
<script>
<!-- Add Zipcode validation function here -->
$(function() {
    var status="<%=member.status%>"; 
    $('#status').val(status);
    var state="<%=member.state%>"; 
     $('#state').val(state);
    		
});
</script>

</head>
<body>
	<h2>Edit Customer</h2>
	<form class="navbar-form navbar-left" role="search"
		action="/updateMember" method="POST">
		<div class="col-xs-2">
			<div class="form-group">
				Member Type:
				<div class="radio">
					<label> <input type="radio" name="member" id="1" value="1"<%
						if (member.membertype =="1"){%> checked <% }%> > Premium Member
					</label>
				</div>
				<div class="radio">
					<label> <input type="radio" name="member" id="0" value="0"<%
						if (member.membertype =="0"){%> checked <% }%> > Simple Member
					</label>
				</div>
				<br>
				<br> First Name: <input type="text" name="firstName" id="fname"
					class="form-control" placeholder="First Name"
					value="<%=member.fname%>" required></input><br> <br>
				Last Name: <input type="text" name="lastName" id="lname"
					class="form-control" placeholder="Last Name"
					value="<%=member.lname%>" required></input><br> <br>
